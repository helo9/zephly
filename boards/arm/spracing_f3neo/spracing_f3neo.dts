/dts-v1/;
#include <st/f3/stm32f303Xc.dtsi>
#include <st/f3/stm32f303r(b-c)tx-pinctrl.dtsi>

/ {
	model = "SPRacing F3 Neo board";
	compatible = "spracing,f3neo";

	soc {
		uart5: serial@40005000 {
			compatible = "st,stm32-uart";
			reg = <0x40005000 0x400>;
			clocks = <&rcc STM32_CLOCK_BUS_APB1 0x00100000>;
			interrupts = <53 0>;
			current-speed = <115200>;
			pinctrl-0 = <&uart5_tx_pc12>;
			pinctrl-names = "default";
			status = "okay";
			label = "UART_5";
		};
	};

    chosen {
		zephyr,console = &uart5;
		zephyr,shell-uart = &uart5;
		zephyr,sram = &sram0;
        zephyr,flash = &flash0;
    };

    leds {
        compatible = "gpio-leds";
		status = "okay";
        led_0: led_0 {
            gpios = <&gpiob 9 (GPIO_LINE_OPEN_DRAIN | GPIO_ACTIVE_HIGH)>;
			label = "User LED0";
			status = "okay";
        };
        led_1: led_1 {
            gpios = <&gpiob 2 (GPIO_LINE_OPEN_DRAIN | GPIO_ACTIVE_HIGH)>;
			label = "User LED1";
			status = "okay";
        };
    };

	aliases {
		led0 = &led_0;
		led1 = &led_1;
	};

	pwmout: pwmout {
		compatible = "zephly,pwmout";
		pwms = <&pwm3 4 0 0>, <&pwm3 2 0 0>, <&pwm3 3 0 0>, <&pwm3 1 0 0>;
		label = "PWMOUT";
		status = "okay";
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	prediv = <1>;
	mul = <9>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(72)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	pinctrl-names = "default";
	current-speed = < 115200 >;
    parity = "even";
    rx-invert;
	status = "okay";
	rc: sbus {
        compatible = "futaba,sbusreceiver";
        label = "RECEIVER0";
        status = "disabled";
    };
};

&spi1 {
	pinctrl-0 = <&spi1_nss_pa4 &spi1_sck_pa5
		     &spi1_miso_pa6 &spi1_mosi_pa7>;
	cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
	pinctrl-names = "default";
	status = "okay";

	imu: mpu6500@0 {
		compatible = "invensense,icm20602";
		reg = <0>;
		spi-max-frequency = < DT_FREQ_K(300) >;
		int-gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
		label = "MPU-6500";
		status = "okay";
	};
};

&timers3 {
	status = "okay";
	st,prescaler = <72>;
	pwm3: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch1_pc6 &tim3_ch2_pc7 &tim3_ch3_pb0 &tim3_ch4_pb1>;
		pinctrl-names = "default";
	};
};
