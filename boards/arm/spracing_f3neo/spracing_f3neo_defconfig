CONFIG_SOC_SERIES_STM32F3X=y
CONFIG_SOC_STM32F303XC=y

# Floating Point Options
CONFIG_FPU=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# enable uart driver
CONFIG_SERIAL=y

# enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# enable GPIO
CONFIG_GPIO=y

# Enable Clocks
CONFIG_CLOCK_CONTROL=y

# Enable pin controller
CONFIG_PINCTRL=y

# disable jtag to get PB3, PB4 free
CONFIG_GPIO_STM32_SWJ_NOJTAG=y

# Enable SPI
CONFIG_SPI=y

# Enable Sensors
CONFIG_SENSOR=y

# Enable IMU
CONFIG_ICM20602_DRIVER=y
